{
  "name": "HelloWorld",
  "version": "0.0.1",
  "description": "Pre-configured boilerplate for Electron + Webpack + react-native + TypeScript",
  "author": "LittleIronMan",
  "license": "MIT or proprietary or any",
  "main": "./electron/dist/main.bundle.js",
  "private": true,
  "scripts": {
    "start": "react-native start",
    "test": "jest",
    "browser:dev": "cd browser && webpack serve --open",
    "browser:prod": "cd browser && webpack --mode production",
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "electron": "cross-env NODE_ENV=development electron ./electron/dist/main.bundle.js",
    "desktop:dev": "rimraf electron/dist && concurrently --names \"renderer,  main  ,electron\"  -c \"cyan,yellow,blue\"  \" yarn run desktop:dev:renderer \" \" yarn wait-on http://localhost:4000 && yarn run desktop:dev:main \" \" yarn wait-on electron/dist/ && cd electron && yarn run electron \" ",
    "desktop:dev:main": "cross-env NODE_ENV=development webpack --watch --mode development --color --config electron/webpack.config.main.js",
    "desktop:dev:renderer": "cross-env NODE_ENV=development webpack serve --mode development --color --config electron/webpack.config.renderer.js",
    "desktop:prod": "rimraf electron/dist && yarn run desktop:prod:main && yarn run desktop:prod:renderer && yarn run generate-icons",
    "desktop:prod:main": "cross-env NODE_ENV=production webpack --progress --mode production --color --config electron/webpack.config.main.js",
    "desktop:prod:renderer": "cross-env NODE_ENV=production webpack --progress --mode production --color --config electron/webpack.config.renderer.js",
    "desktop:build": "concurrently --names \"win,mac\" \" yarn run desktop:build:win \" \" yarn run desktop:build:mac \"",
    "desktop:build:common": "electron-builder build --config electron/electron-builder.yml",
    "desktop:build:win": "yarn run desktop:build:common --win --x64",
    "desktop:build:mac": "yarn run desktop:build:common --mac --x64",
    "desktop:release": "release-it --config electron/release-it.yml",
    "generate-icons": "cross-env-shell electron-icon-builder --flatten --input=$INIT_CWD/electron/icons/appIcon.png --output=./electron/build/",
    "rebuild": "electron-rebuild",
    "rebuild:module": "electron-rebuild -f -w yourmodule",
    "desktop:quickstart": "yarn run desktop:dev",
    "desktop:quickstart:freshen": "yarn run freshen && yarn run desktop:quickstart",
    "desktop:quickbuild": "yarn run freshen && yarn run desktop:prod && yarn run desktop:build",
    "clean:electron": "rimraf electron/dist/ electron/out/ electron/build/",
    "clean:all": "yarn run clean:electron && rimraf node_modules/",
    "freshen": "yarn run clean:all && yarn install && yarn run rebuild",
    "eslint:fix": "eslint . --fix --ext .js,.jsx,.ts,.tsx",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "windows:deprecated": "react-native run-windows"
  },
  "scriptsComments": {
    "desktop:*": "Все electron скрипты были унаследованы из https://github.com/RealDyllon/electron-react-typescript-webpack-boilerplate"
  },
  "dependencies": {
    "ironman_utils": "git+https://github.com/LittleIronMan/ironman_utils#main",
    "lodash": "^4.17.21",
    "react": "17.0.2",
    "react-dom": "^17.0.2",
    "react-native": "0.65.1",
    "react-native-image-picker": "4.0.6",
    "react-native-svg": "^12.1.0",
    "react-native-web": "^0.17.1",
    "react-router-dom": "^5.2.0",
    "react-router-native": "^5.2.0",
    "rnweb_ui": "git+https://github.com/LittleIronMan/rnweb_ui#work"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-react": "^7.10.1",
    "@babel/runtime": "^7.12.5",
    "@react-native-community/eslint-config": "^2.0.0",
    "@svgr/webpack": "^5.5.0",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.172",
    "@types/react-dom": "^17.0.9",
    "@types/react-native": "^0.64.5",
    "@types/react-router-dom": "^5.1.6",
    "@types/react-router-native": "^5.1.0",
    "@types/react-test-renderer": "^16.9.2",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.1.0",
    "babel-plugin-react-native-web": "^0.17.1",
    "concurrently": "^6.2.1",
    "copy-webpack-plugin": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^11.1.1",
    "electron-builder": "^22.9.1",
    "electron-devtools-installer": "^3.2.0",
    "electron-icon-builder": "^2.0.1",
    "electron-rebuild": "^2.3.5",
    "eslint": "^7.14.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.2",
    "jest": "^26.6.3",
    "metro-react-native-babel-preset": "^0.66.0",
    "react-native-codegen": "^0.0.7",
    "react-native-svg-transformer": "^0.14.3",
    "react-test-renderer": "17.0.2",
    "rimraf": "^3.0.2",
    "ts-loader": "^9.2.5",
    "typescript": "^3.8.3",
    "wait-on": "^6.0.0",
    "webpack": "^5.51.1",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.0.0"
  },
  "resolutions": {
    "@types/react": "^17"
  },
  "jest": {
    "preset": "react-native",
    "testMatch": [
      "**/tests/**/*.[jt]s?(x)",
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ]
  }
}
